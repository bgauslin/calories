user-values
  display block
  grid-area values
  padding var(--site-padding)
  place-self var(--values-place-self)

user-values fieldset
  border 0
  opacity 1
  padding 0
  transition opacity TRANSITION

user-values [disabled]
  opacity .3
  pointer-events none

user-values form
  display grid
  gap .75rem
  grid auto-flow / 1fr

// Tweak a few <fieldset> layouts based on their content.
user-values h2
  display flex
  font-size 1rem
  margin .5rem 0

user-values h2 > span
  color var(--secondary-text-color)
  margin-left auto

// Pull 'Sex' heading out of the viewport since its options make this obvious.
user-values [id='sex'] h2
  left -100vw
  position absolute

user-values ul
user-values li
  align-items center
  display flex
  padding 0

user-values ul
  margin 0

user-values [id='measurements'] ul
  flex-wrap wrap
  gap .75rem

user-values .weight
user-values .age
  flex 0 0 100%

user-values .feet::before
  content 'Height'
  width LABEL_WIDTH

user-values .weight::after
user-values .age::after
  color var(--secondary-text-color)
  margin-left .5em
  pointer-events none

user-values .weight::after
  content 'lbs.'

user-values .age::after
  content 'yrs.'

user-values label
  display flex

user-values label:focus
  outline none

[no-touch] user-values label:hover
  cursor pointer

user-values label:focus > [type] + span
[no-touch] user-values label:hover > [type] + span
  color var(--primary-text-color)
  transform scale(1.1)

user-values [for='feet']
user-values [for='inches']
  color var(--secondary-text-color)
  margin 0 1rem 0 .5rem
  order 2
  text-transform lowercase

user-values [for='age']
user-values [for='weight']
  width LABEL_WIDTH

user-values label > span
  transition color TRANSITION, transform TRANSITION

user-values [type='text']
  background var(--background-2)
  border 2px solid var(--background-0)
  border-radius 6px
  box-sizing content-box
  color var(--primary-text-color)
  font-size 1em
  height INPUT_HEIGHT
  padding 0 .5rem
  text-align end
  width 3rem

user-values [type='radio'] + span
  align-items center
  border-radius 2px
  color var(--secondary-text-color)
  display flex
  justify-content center
  pointer-events none
  width 100%

user-values [type='radio']:checked + span
  color var(--primary-text-color)

[no-js] user-values
  display none
