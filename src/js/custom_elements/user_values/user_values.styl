user-values
  display block
  grid-area values
  padding var(--gap)
  place-self var(--values-place-self)

  fieldset
    border 0
    opacity 1
    padding 0
    transition opacity var(--transition)

  [disabled]
    opacity .3
    pointer-events none

  form
    display grid
    gap .75rem
    grid auto-flow / 1fr

  h2
    display flex
    font-size 1rem
    margin-block .5rem

  h2 > span
    opacity var(--text-opacity)
    margin-inline auto 0

  // Lists for radio buttons.
  :is(ul, li)
    align-items center
    display flex
    padding 0

  ul
    margin 0

  // Adjustments for individual sections and fields.
  [id='measurements'] ul
    flex-wrap wrap
    gap .75rem

  :is(.weight, .age)
    flex 0 0 100%

  :is(.weight, .age)::after
    margin-inline .5em 0
    opacity var(--text-opacity)
    pointer-events none

  .feet::before
    content 'Height'
    inline-size var(--label-width)

  .weight::after
    content 'lbs.'

  .age::after
    content 'yrs.'

  // Wrapper for <input> and <span> elements.
  label
    display flex

  label:focus
    outline none

  // TODO: Remove/replace [no-touch] with feature queries.
  [no-touch] & label:hover
    cursor pointer

  label:focus > [type] + span
  [no-touch] & label:hover > [type] + span
    color var(--text-color)
    transform scale(1.1)

  // Individual <label> adjustments.
  [for='feet']
  [for='inches']
    margin-block 0
    margin-inline 1rem .5rem
    opacity var(--text-opacity)
    order 2
    text-transform lowercase

  :is([for='age'], [for='weight'])
    inline-size var(--label-width)

  // Text inputs.
  [type='text']
    background var(--fill-3)
    block-size var(--input-height)
    border 2px solid var(--fill-1)
    border-radius 6px
    box-sizing content-box
    color var(--text-color)
    font-size 1em
    inline-size 3rem
    padding-inline .5rem
    text-align end

  // Text labels.
  span
    transition color var(--transition), transform var(--transition)

  // Text labels for radio buttons.
  [type='radio'] + span
    align-items center
    border-radius 2px
    // color var(--text-color)
    display flex
    inline-size 100%
    justify-content center
    pointer-events none

  [type='radio']:not(:checked) + span
    opacity var(--text-opacity)

  // JavasScript disabled.
  [no-js] &
    display none
