user-values
  display block
  grid-area user-values
  margin 2rem 0

user-values > form > div
  margin 0 0 1rem
  opacity 1
  transition opacity transition

  &[disabled]
    opacity .3

  &[disabled] *
    pointer-events none !important

  &[disabled] *:hover
    cursor default !important

  &.sex
    margin-bottom 1.5rem

  &.measurements
    margin-bottom .5rem

user-values h2
  display flex
  font-size 1rem
  margin 0 0 .5rem

  // Pull 'Sex' heading out of the viewport since its options make this obvious.
  &.sex
    left -100vw
    position absolute

  & > span
    margin-left auto
    opacity text-opacity

user-values ul
user-values li
  align-items center
  display flex
  padding 0

user-values ul
  margin 0

  &.measurements
    flex-wrap wrap

user-values li
  margin 0 0 .75rem

  &.weight
  &.age
    flex 0 0 100%

  &.feet::before
    content 'Height'
    width 4.5rem // TODO: Update with a constant.

  &.activity
  &.goal
  &.sex
    flex 1
    height input-height
    margin 0
