info-toggle
  block-size BUTTON_HEIGHT
  border-radius BUTTON_HEIGHT
  cursor pointer
  display flex
  inline-size BUTTON_WIDTH
  margin-inline-end rem(-12)
  opacity 1
  outline none
  transition background TRANSITION, opacity TRANSITION_SLOW ease-out, transform TRANSITION

  &:active
    transform scale(.9)

  &:active
  &:focus
  [no-touch] &:hover
    background var(--background-1)

info-toggle[pending]
  opacity 0
  visibility hidden

.icon
  flex 0 0 rem(20)
  margin auto
  pointer-events none

.icon--close > path
  stroke var(--primary-text-color)
  stroke-width 2.5

.icon--info > circle
  fill var(--background-0)

.icon--info > circle:first-of-type
  fill var(--primary-text-color)

.icon--info > path
  fill none
  stroke var(--background-0)
  stroke-linecap round
  stroke-width 2.5
