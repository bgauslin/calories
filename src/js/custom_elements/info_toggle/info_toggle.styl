info-toggle
  block-size var(--button-size)
  border-radius var(--button-size)
  cursor pointer
  display flex
  grid-area info
  inline-size var(--button-size)
  opacity 1
  outline none
  place-self center end
  transition background var(--transition), opacity var(--transition-slow) ease-out, transform var(--transition)
  z-index 2

  &[pending]
    opacity 0
    visibility hidden

  &:active
    transform scale(.9)

  &:active
  &:focus
  [no-touch] &:hover
    background var(--fill-2)

.icon
  flex 0 0 1.25rem
  margin auto
  pointer-events none

.icon--close
  path
    stroke var(--text-color)
    stroke-width 2.5

.icon--info
  circle
    fill var(--fill-0)

  circle:first-of-type
    fill var(--text-color)

  path
    fill none
    stroke green
    stroke var(--fill-0)
    stroke-linecap round
    stroke-width 2.5
