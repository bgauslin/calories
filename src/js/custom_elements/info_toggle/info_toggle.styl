info-toggle
  block-size var(--button-size)
  border-radius var(--button-size)
  cursor pointer
  display flex
  inline-size var(--button-size)
  margin-inline-end -.75rem
  opacity 1
  outline none
  transition background var(--transition), opacity var(--transition-slow) ease-out, transform var(--transition)

  &:active
    transform scale(.9)

  &:active
  &:focus
  [no-touch] &:hover
    background var(--background-1)

info-toggle[pending]
  opacity 0
  visibility hidden

.icon
  flex 0 0 1.25rem
  margin auto
  pointer-events none

.icon--close > path
  stroke var(--primary-text-color)
  stroke-width 2.5

.icon--info > circle
  fill var(--background-0)

.icon--info > circle:first-of-type
  fill var(--primary-text-color)

.icon--info > path
  fill none
  stroke var(--background-0)
  stroke-linecap round
  stroke-width 2.5
