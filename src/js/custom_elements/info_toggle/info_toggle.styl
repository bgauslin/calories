info-toggle
  border-radius 50%
  cursor pointer
  display flex
  height button-height
  margin-right rem(-12)
  opacity 1
  outline 0
  transition opacity transition-slow ease-out, transform transition
  width button-width

  &[pending]
    opacity 0
    visibility hidden

  &:focus
  [no-touch] &:hover
    transform scale(1.25)

  [no-touch] &:hover
    opacity .75

  &:active
    transform scale(.85)

  > svg
    flex 0 0
    margin auto
    pointer-events none

  .info
    flex-basis rem(20)

  .close
    flex-basis rem(24)
