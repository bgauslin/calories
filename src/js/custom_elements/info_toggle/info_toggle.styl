info-toggle
  border-radius 50%
  cursor pointer
  display flex
  height button-height
  margin-right rem(-12)
  opacity 1
  outline 0
  transition opacity transition-slow ease-out, transform transition
  width button-width

  &[pending]
    opacity 0
    visibility hidden

  &:focus
  [no-touch] &:hover
    transform scale(1.25)

  [no-touch] &:hover
    opacity .75

  &:active
    transform scale(.85)

  .icon
    flex 0 0 rem(20)
    margin auto
    pointer-events none

  .icon--close > line
    stroke var(--text-1-color)
    stroke-width 2.5

  .icon--info > circle
    fill var(--background-0)

  .icon--info > circle:first-of-type
    fill var(--text-1-color)

  .icon--info > polyline
  .icon--info > line
    fill none
    stroke var(--background-0)
    stroke-linecap round
    stroke-width 2.5
