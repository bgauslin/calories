info-panel
  background var(--background-0)
  grid-column 1
  grid-row 1 / 3
  padding 1rem 0
  transform translateY(100vh)
  transition transform transition ease-out
  z-index 1

  &[open]
    transform translateY(0)

  h3
    font-size var(--h3)
    margin 1.5rem 0 .5rem
    webfont-weight(600)

  h3:first-of-type
    margin-top 0

  p
  table
    font-size var(--copy-font-size)
    margin 0 0 1rem

  tr
    border-bottom 1px solid var(--border-color)

  th
  td
    padding .5em 0

  th
    text-align left
    webfont-weight(600)

  th:not(:first-child)
  td:not(:first-child)
    text-align right

  [no-js] &
    display none
