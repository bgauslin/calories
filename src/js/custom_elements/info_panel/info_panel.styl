info-panel
  background var(--background-0)
  bottom 0
  left 0
  overflow-y scroll
  padding var(--header-height) 0 env(safe-area-inset-bottom)
  position fixed
  right 0
  top 0
  transform translateY(100vh)
  transition transform transition ease-out
  z-index 1

  &[open]
    transform translateY(0)

  & > div
    margin 0 auto
    max-width content-max-width
    padding 0 0 2rem

  h3
    font-size var(--h3)
    margin 1.5rem 0 .5rem
    webfont-weight(600)

  h3:first-of-type
    margin-top 0

  p
  table
    font-size var(--copy-font-size)
    margin 0 0 1rem

  tr
    border-bottom 1px solid var(--border-color)

  th
  td
    padding .5em 0

  th
    text-align left
    webfont-weight(600)

  th:not(:first-child)
  td:not(:first-child)
    text-align right

  [no-js] &
    display none
