info-panel
  background var(--background-0)
  bottom 0
  left 0
  overflow-y scroll
  padding var(--header-height) 0 env(safe-area-inset-bottom)
  position fixed
  right 0
  top 0
  transform translateY(100vh)
  transition transform transition ease-out
  z-index 1

info-panel[open]
  transform translateY(0)

info-panel > div
  margin 0 auto
  max-width content-max-width
  padding 1rem var(--site-padding)

info-panel h1
info-panel h2
info-panel h3
  font-variation-settings 'wght' 600

info-panel h1
  font-size var(--h1-font-size)
  margin 0 0 1rem

info-panel h2
  font-size var(--h2-font-size)
  margin 2rem 0 .5rem

info-panel h3
  font-size var(--h3-font-size)
  margin 1rem 0 .5rem

info-panel p
info-panel table
  font-size var(--copy-font-size)
  margin 0 0 1rem

info-panel tr
  border-bottom 1px solid var(--border-color)

info-panel th
info-panel td
  padding .5em 0

info-panel th
  font-variation-settings 'wght' 600
  text-align start

info-panel th:not(:first-child)
info-panel td:not(:first-child)
  text-align end

[no-js] info-panel
  display none
