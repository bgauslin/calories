zig-zag
  display flex
  flex-direction column
  grid-area zig-zag

  expand-able
    margin-bottom 2rem
    order 2

  ol
    margin 0 0 2rem
    order 1
    overflow hidden
    padding 0
    transition height transition-slow ease-out, margin transition-slow ease-out
    will-change height

  ol[aria-hidden=true]
    margin 0

  li
    background var(--marker-background)
    border-radius 0 4px 4px 0
    display flex
    margin .375rem 0
    padding .375rem .5rem
    transition background transition, color transition, width transition-slow ease-out

  .warning
    background #f8d7da
    color #721c24

  .warning > label
    opacity 1

  label
    flex 1
    margin-right .5rem
    opacity text-opacity
    transition opacity transition-slow ease-out
