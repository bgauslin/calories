zig-zag
  grid-area graph
  padding var(--gap)
  transition opacity var(--transition) ease-out

zig-zag[hidden]
  opacity 0

zig-zag ol
  display grid
  gap .5rem
  grid auto-flow / 1fr
  margin 0
  padding 0

zig-zag li
  background var(--fill-2)
  border-radius 0 4px 4px 0
  display flex
  gap 0 .5rem
  padding .375rem .5rem
  transition background var(--transition), color var(--transition), inline-size var(--transition-slow) ease-out

zig-zag label
  color var(--secondary-text-color)
  flex 1
  transition opacity var(--transition-slow) ease-out

zig-zag .warning
  background var(--warning-background)

zig-zag .warning
zig-zag .warning > label
  color var(--warning-color)

[no-js] zig-zag
  display none
