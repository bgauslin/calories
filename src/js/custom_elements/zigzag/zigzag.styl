zig-zag
  display flex
  flex-direction column
  grid-area zig-zag

  expand-able
    margin 2rem auto
    order 2

  ol
    margin 0
    order 1
    overflow hidden
    padding 0
    transition height transition-slow ease-out, margin transition-slow ease-out
    will-change height

  ol[aria-hidden=true]
    margin 0

  li
    background var(--background-2)
    border-radius 0 4px 4px 0
    display flex
    margin .375rem 0
    padding .375rem .5rem
    transition background transition, color transition, width transition-slow ease-out

  label
    color var(--text-2-color)
    flex 1
    margin-right .5rem
    transition opacity transition-slow ease-out

  .warning
    background #f8d7da

  .warning
  .warning > label
    color #721c24

  [no-js] &
    display none
