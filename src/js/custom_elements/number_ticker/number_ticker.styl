number-ticker
  display block
  transition opacity var(--transition)

number-ticker[hidden]
  opacity 0

[id='results']
  background -webkit-linear-gradient(var(--brand-orange), var(--brand-red))
  -webkit-background-clip text
  font-size 300%
  grid-area results
  line-height 1
  margin-block: var(--results-margin-block);
  padding-block 0 1em
  padding-inline 0
  place-self center
  position relative
  text-align center
  -webkit-text-fill-color transparent

[id='results']::after
  background inherit
  content attr(label)
  display block
  font-size 1rem
  inline-size 100%
  inset-block auto 0
  line-height initial
  position absolute
  text-transform lowercase
