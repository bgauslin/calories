number-ticker
  display block
  opacity 1
  transition opacity TRANSITION

number-ticker[hidden]
  opacity 0
  visibility hidden

number-ticker[type='primary']
  background -webkit-linear-gradient(BRAND_ORANGE, BRAND_RED)
  -webkit-background-clip text
  font-size 300%
  line-height 1
  margin 2rem 0
  padding 0 0 1.25rem
  position relative
  text-align center
  -webkit-text-fill-color transparent

number-ticker[type='primary']::after
  background inherit
  bottom 0
  content attr(label)
  display block
  font-size 1rem
  line-height initial
  position absolute
  text-transform lowercase
  width 100%
