INPUT_HEIGHT = 2rem

.values__heading
  margin 0 0 .5rem

.values__heading__note
  opacity .7

.values__heading__note::before
  content '('

.values__heading__note::after
  content ')'

.values__list
  margin 0
  padding 0

.values__list--activity
.values__list--goal
  background rgba(black, .1)
  border 2px solid transparent
  border-radius 4px
  display flex
  margin 0 0 .75rem

.values__item
  align-items center
  display flex
  margin 0 0 .75rem
  padding 0

.values__item--activity
.values__item--goal
  flex 1
  height INPUT_HEIGHT
  margin 0

.values__item--sex::before
  content 'Sex'

.values__item--feet
.values__item--inches
  display inline-flex

.values__item--feet::before
  content 'Height'

.values__item--feet > label
.values__item--inches > label
  margin 0 .75rem 0 .375rem
  opacity .5
  order 2

.values__label
  display flex

.values__label--activity
.values__label--goal
  height 100%
  width 100%

.values__label--sex:not(:first-of-type)
  margin-left 1rem

.values__item--sex::before
.values__item--feet::before
.values__label--age
.values__label--weight
  width 5rem

[no-touch] .values__label--sex:hover
[no-touch] .values__label--activity:hover
[no-touch] .values__label--goal:hover
  cursor pointer

.values__input[type=number]
  border 2px solid transparent
  border-radius 4px
  font-size 1em
  height INPUT_HEIGHT
  padding 0 .5rem
  text-align right
  width 3.5rem

.values__item--weight::after
.values__item--age::after
  margin-left .5em
  opacity .6
  pointer-events none

.values__item--weight::after
  content 'lbs.'

.values__item--age::after
  content 'years'

// [1] Disable pointer events on elements within radio button labels so that
// iOS Safari can register a tap on the label.
input[type=radio] ~ span
  align-items center
  border-radius 2px
  display flex
  justify-content center
  pointer-events none // [1]
  width 100%

input[type=number]
  background rgba(black, .1)

input[type=number]:focus
input[type=radio]:checked ~ span
  background rgba(black, .15)

.result
  color var(--branding)
  font-size 200%
  margin 2rem
  text-align center

.result::after
  color rgba(black, .4)
  content 'kcal'
  font-size .75em
  margin-left .5rem