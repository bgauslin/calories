BRAND_ORANGE = #ff7a00

// [1] Knockout matches theme's body background.
.header
  background 'linear-gradient(%s, %s)' % (Branding.RED Branding.ORANGE)
  color var(--background) // [1]
  height var(--header-height)
  left 0
  padding 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)
  position fixed
  right 0
  top 0
  transform translate3d(0, var(--sticky-shift), 0)
  z-index 2

.header__frame
  align-items center
  display flex
  height var(--header-height)
  justify-content space-between
  margin 0 auto
  padding 0 var(--grid-gap)

  @media Breakpoint.MEDIUM
    max-width CONTENT_MAX_WIDTH
    padding 0

.header__title
  font-size var(--site-header)
  line-height 1
  margin 0
  white-space nowrap
