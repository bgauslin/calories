result-counter
  display block

.result
  background '-webkit-linear-gradient(%s, %s)' % (Branding.ORANGE Branding.RED)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  font-size 250%
  margin 3rem 0
  text-align center

.result::after
  content 'kcal'
  font-size .75em
  margin-left .5rem

.result[empty]
  visibility hidden