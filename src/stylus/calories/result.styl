.result
  background '-webkit-linear-gradient(%s, %s)' % (Branding.ORANGE Branding.RED)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  font-size 300%
  line-height 1
  margin 2rem 0 0
  padding 0 0 1.25rem
  position relative
  text-align center

.result::after
  background inherit
  bottom 0
  content 'Total Daily Calories'
  display block
  font-size 1rem
  line-height initial
  position absolute
  width 100%

.result[hidden]
.result:not([hidden])
  transition opacity var(--transition)

.result[hidden]
  opacity 0
  visibility hidden

.result:not([hidden])
  opacity 1
  visibility visible