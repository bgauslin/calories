.result
  background '-webkit-linear-gradient(%s, %s)' % (Branding.ORANGE Branding.RED)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  font-size 300%
  margin 2rem 0 0
  padding 0 0 1rem
  position relative
  text-align center

.result::after
  background inherit
  bottom 0
  content 'avg. calories per day'
  display block
  font-size 1rem
  position absolute
  width 100%
