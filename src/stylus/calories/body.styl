body
  background var(--background)
  color var(--text)
  display grid
  grid-template-areas 'header'\
                      'main'\
                      'footer'
  grid-template-columns 1fr
  grid-template-rows var(--header-height) 1fr auto
  min-height 100vh // fallback
  min-height calc(var(--vh, 1vh) * 100)
