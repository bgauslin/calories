:root
  --branding '%s' % Branding.RED

  --site-header px_to_rem(16)  
  --fineprint px_to_rem(12)

  --button-width px_to_rem(44)
  --footer-height px_to_rem(44)
  --grid-gap GRID_GAP
  --header-height px_to_rem(44)

  --transition .2s

  // Values set via JS
  --sticky-shift 0

  @media Breakpoint.MEDIUM
    --site-header px_to_rem(20)
    --fineprint px_to_rem(14)

    --grid-gap GRID_GAP_MEDIUM
    --footer-height px_to_rem(60)
    --header-height px_to_rem(60)

  [theme=light]
    --background white
    --field-background #ddd
    --focus rgba(black, .5)
    --marker-background #ddd
    --marker-canvas-background rgba(black, .05)
    --text rgba(black, .8)

  [theme=dark]
    --background '%s' % Theme.DARK
    --field-background #555
    --focus white
    --marker-background #555
    --marker-canvas-background rgba(white, .05)
    --text rgba(white, .7)
