.info-panel
  background var(--background)
  height calc(var(--viewport-unit, 1vh) * 100)
  left 0
  position fixed
  top 0
  transform translateY(100%)
  transition transform var(--transition)
  width 100vw
  z-index 1

.info-panel[open]
  transform translateY(0)

.info-panel__copy
  height calc(100% - var(--header-height))
  margin var(--header-height) auto 0
  overflow auto
  padding 1rem 

  @media Breakpoint.MEDIUM
    max-width CONTENT_MAX_WIDTH
    padding 1rem 0

.info-panel__copy > h3
  webfont_weight(600)
  font-size var(--h3)
  margin 1.5rem 0 .5rem

.info-panel__copy > h3:first-of-type
  margin-top 0

.info-panel__copy > p
.info-panel__copy > table
  font-size var(--copy)
  margin 0 0 1rem

.info-panel__copy tr
  border-bottom 1px solid var(--table-border)

.info-panel__copy th
.info-panel__copy td
  padding .5em 0

.info-panel__copy th
  text-align left
  webfont_weight(600)

.info-panel__copy th:last-child
.info-panel__copy td:last-child
  text-align right
