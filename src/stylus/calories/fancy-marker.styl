fancy-marker
  background rgba(black, .1)
  border-radius 4px
  display block
  position relative

fancy-marker .marker
  background rgba(black, .1)
  border-radius 4px
  height 100%
  left var(--marker-left)
  position absolute
  top 0
  transition left var(--transition) ease-out, width var(--transition) ease-out
  width var(--marker-width)
  z-index -1
