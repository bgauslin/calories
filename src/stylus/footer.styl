footer
  align-items center
  color var(--text)
  display flex
  font-size var(--fineprint)
  grid-area footer
  height var(--footer-height)
  justify-content center
  opacity text-opacity
  padding 0 0 env(safe-area-inset-bottom)

  a
    link(var(--app-link), var(--app-link), var(--app-link-active), var(--app-link-active))

    &:focus
    [no-touch] &:hover
      transition color transition
