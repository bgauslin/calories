body
  // Layout.
  --button-size 2.75rem
  --gap clamp(1rem, .5rem \+ 2vw, 2rem)
  --header-height 3rem
  --input-height 2rem
  --label-width 4rem
  --main-grid 'values' 'results' 'graph' 1fr '.' 0 / 1fr
  --main-gap 2rem
  --main-max-width 24rem

  // Typography.
  --copy-font-size .875em
  --h1-font-size 1em
  --h2-font-size .9375em
  --h3-font-size .875em
  --header-font-size 1rem

  // Branding colors.
  --brand-red rgb(178, 34, 34)
  --brand-orange rgb(255, 122, 0)

  // Grays via Apple HIG.
  // @see https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/color
  --gray1 rgb(142, 142, 147)
  --gray2 rgb(174, 174, 178)
  --gray3 rgb(199, 199, 204)
  --gray4 rgb(209, 209, 214)
  --gray5 rgb(229, 229, 234)
  --gray6 rgb(242, 242, 247)

  // Theming.
  --border-color var(--gray3)
  --fill-0 var(--gray6)
  --fill-1 white
  --fill-2 var(--gray5)
  --fill-3 var(--gray3)
  --header-backdrop-background rgba(255, 255, 255, .65)
  --header-background rgba(255, 255, 255, .95)
  --invalid-color var(--brand-red)
  --link-color rgb(0, 121, 253)
  --primary-text-color rgb(0, 0, 0)
  --warning-background rgb(248, 215, 218)
  --warning-color rgb(114, 28, 36)

  // TODO: Refactor/remove:
  --secondary-text-color rgb(72, 72, 74)  // Gray 3 Dark

  // Animations and transitions.
  --transition .3s
  --transition-slow .5s

@media (orientation: landscape)
  body
    --main-gap 0
    --main-grid 'values results' 'values graph' auto / 1fr 1fr
    --main-max-width 50rem
    --results-margin-block 2rem 0
    --values-place-self center

@media (min-width 50rem)
  body
    --copy-font-size 1rem
    --h1-font-size 1.25em
    --h2-font-size 1.125em
    --h3-font-size 1em
    --header-font-size 1.25rem
    --header-height 5rem

@media (prefers-color-scheme dark)
  body
    // Dark mode grays.
    --gray1 rgb(142, 142, 147)
    --gray2 rgb(99, 99, 102)
    --gray3 rgb(72, 72, 74)
    --gray4 rgb(58, 58, 60)
    --gray5 rgb(44, 44, 46)
    --gray6 rgb(28, 28, 30)

    // Dark mode theming.
    --border-color var(--gray4)
    --fill-0 black
    --fill-1 var(--gray6)
    --fill-2 var(--gray5)
    --fill-3 var(--gray3)
    --header-backdrop-background rgba(28, 28, 30, .65)
    --header-background rgba(0, 0, 0, .95)
    --invalid-color var(--brand-orange)
    --link-color rgb(10, 132, 254)
    --primary-text-color white

    // TODO: Refactor/remove:
    --secondary-text-color rgb(174, 174, 178)  // Gray2 light
