body
  --background-0 BACKGROUND_0
  --background-1 BACKGROUND_1
  --background-2 BACKGROUND_2
  --border-color BORDER_COLOR
  --copy-font-size em(14)
  --h1-font-size em(16)
  --h2-font-size em(15)
  --h3-font-size em(14)
  --header-backdrop-background HEADER_BACKDROP_BACKGROUND
  --header-background HEADER_BACKGROUND
  --header-font-size rem(16)
  --header-height rem(48)
  --input-height rem(32)
  --invalid-color BRAND_RED
  --link-color LINK_COLOR
  --main-grid 'values' 'results' 'graph' 1fr / 1fr
  --main-gap 1rem
  --main-max-width rem(400)
  --primary-text-color TEXT_PRIMARY_COLOR
  --secondary-text-color TEXT_SECONDARY_COLOR
  --site-padding rem(16)

@media (prefers-color-scheme dark)
  body
    --background-0 BACKGROUND_0_DARK
    --background-1 BACKGROUND_1_DARK
    --background-2 BACKGROUND_2_DARK
    --border-color BORDER_COLOR_DARK
    --header-backdrop-background HEADER_BACKDROP_BACKGROUND_DARK
    --header-background HEADER_BACKGROUND_DARK
    --invalid-color BRAND_ORANGE
    --link-color LINK_COLOR_DARK
    --primary-text-color TEXT_PRIMARY_COLOR_DARK
    --secondary-text-color TEXT_SECONDARY_COLOR_DARK

@media (min-width rem(640))
  body
    --copy-font-size rem(16)
    --h1-font-size em(20)
    --h2-font-size em(18)
    --h3-font-size em(16)
    --header-font-size rem(20)
    --header-height rem(60)

@media (orientation: landscape)
  body
    --main-grid 'values results' 'values graph' auto / 1fr 1fr
    --main-max-width rem(800)