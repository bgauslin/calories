:root
  --copy-font-size em(14)
  --header-font-size rem(16)
  --header-height rem(48)
  --site-padding rem(16)

  @media screen and (min-width rem(640))
    --copy-font-size rem(16)
    --header-font-size rem(20)
    --header-height rem(60)
    --site-padding 0

  // Default light theme.
  --background-0 background-0
  --background-1 background-1
  --background-2 background-2

  --header-background rgba(background-0, .33)
  --invalid-color brand-red
  --link-color link-color
  --text-1-color text-1-color
  --text-2-color text-2-color

  // Dark theme per user settings.
  @media (prefers-color-scheme dark)
    --background-0 background-0-dark
    --background-1 background-1-dark
    --background-2 background-2-dark

    --header-background rgba(background-0-dark, .33)
    --invalid-color brand-orange
    --link-color link-color-dark
    --text-1-color text-1-color-dark
    --text-2-color text-2-color-dark
