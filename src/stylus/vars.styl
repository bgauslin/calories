body
  // Layout.
  --button-size rem(44)
  --header-height rem(48)
  --input-height rem(32)
  --label-width rem(72)
  --main-grid 'values' 'results' 'graph' 1fr / 1fr
  --main-gap 1rem
  --main-max-width rem(400)
  --site-padding rem(16)
  --transition .3s
  --transition-slow .5s

  // Typography.
  --copy-font-size em(14)
  --h1-font-size em(16)
  --h2-font-size em(15)
  --h3-font-size em(14)
  --header-font-size rem(16)

  // Theming.
  // Gray colors are taken from Apple HIG.
  // @see https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/color
  --background-0 white
  --background-1 rgb(242, 242, 247)  // Gray 6
  --background-2 rgb(199, 199, 204)  // Gray 3
  --border-color rgb(199, 199, 204)  // Gray 3
  --brand-red #b22222  // Firebrick
  --brand-orange #ff7a00
  --header-backdrop-background rgba(white, .65)
  --header-background rgba(white, .95)
  --invalid-color var(--brand-red)
  --link-color #0079fd
  --primary-text-color black
  --secondary-text-color rgb(72, 72, 74)  // Gray 3 Dark
  --warning-background #f8d7da
  --warning-color #721c24

@media (orientation: landscape)
  body
    --main-grid 'results values' 'graph values' auto / 1fr 1fr
    --main-max-width rem(800)

@media (prefers-color-scheme dark)
  body
    // Dark mode theming.
    --background-0 black
    --background-1 rgb(28, 28, 30)  // Gray 6 Dark
    --background-2 rgb(58, 58, 60)  // Gray 4 Dark
    --border-color rgb(58, 58, 60)  // Gray 4 Dark
    --header-backdrop-background rgba(28, 28, 30, .65)  // Gray 6 Dark
    --header-background rgba(black, .95)
    --invalid-color var(--brand-orange)
    --link-color #0a84fe
    --primary-text-color rgb(229, 229, 234)  // Gray 5
    --secondary-text-color rgb(174, 174, 178)  // Gray 2

@media (min-width rem(640))
  body
    --copy-font-size rem(16)
    --h1-font-size em(20)
    --h2-font-size em(18)
    --h3-font-size em(16)
    --header-font-size rem(20)
    --header-height rem(60)

