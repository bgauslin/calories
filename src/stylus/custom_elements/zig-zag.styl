zig-zag > app-expandable
  margin 0 0 2rem

.zig-zag
  margin 0
  overflow hidden
  transition height var(--transition-slow) ease-out, margin var(--transition-slow) ease-out
  will-change height

.zig-zag[expanded]
  margin 0 0 2rem

.zig-zag__day
  background var(--marker-background)
  border-radius 0 4px 4px 0
  display flex
  margin .375rem 0
  padding .375rem .5rem
  transition background var(--transition), color var(--transition), width var(--transition-slow) ease-out
  width var(--width)

.zig-zag__day.warning
  background #f8d7da
  color #721c24

.zig-zag__label
  margin-right .5rem  

.zig-zag__value
  margin-left auto
