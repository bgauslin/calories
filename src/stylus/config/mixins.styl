// @mixin
all-webfonts()
  @font-face
    font-family 'Avenir Variable'
    font-weight 1 999
    src url('https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2') format('woff2')

// @mixin
// @param Color color
// @param String size
// @param String direction
css-triangle(color, size, direction)
  if direction == 'up'
    border-bottom size solid color
    border-left size solid transparent
    border-right size solid transparent
  if direction == 'down'
    border-left size solid transparent
    border-right size solid transparent
    border-top size solid color
  if direction == 'right'
    border-bottom size solid transparent
    border-left size solid color
    border-top size solid transparent
  if direction == 'left'
    border-bottom size solid transparent
    border-right size solid color
    border-top size solid transparent
  height 0
  width 0

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link(link, visited, hover, active)
  &
    &:link
      color link

    &:visited
      color visited

    &:active
    &:focus
      color active

  [no-touch] &
    &:hover
      color hover

// @mixin
// @param Number weight [500]
webfont(weight = 500)
  font-family 'Avenir Variable', sans-serif
  font-variation-settings 'wght' weight

// @mixin
// @param Number weight
webfont-weight(weight)
  font-variation-settings 'wght' weight
